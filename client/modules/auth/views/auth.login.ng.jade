//
// *** Auth login view
//

.text-center.loginscreen.animated.fadeInDown( ng-controller="auth.login.form" )
  h3 Welcome to Seed
  p
    | Angular-meteor seed to bootstrap new projects.
  p Login in, to see it in action.
  form.m-t( role="form" )
    .form-group
      input.form-control( type="text", placeholder="E-mail", ng-model="user.email" )
    .form-group
      input.form-control( type="password", placeholder="Password", ng-model="user.password" )
    button.btn.btn-primary.block.full-width.m-b( ng-click="login()" ) Login
