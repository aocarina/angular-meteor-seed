//
// *** Top navbar view
//

nav.navbar.navbar-inverse( role="navigation", ng-controller="navbar.top" )
  .container-fluid
    // Brand and toggle get grouped for better mobile display
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-content', aria-expanded='false')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#') Angular-Meteor Seed
    // Collect the nav links, forms, and other content for toggling
    #navbar-content.collapse.navbar-collapse
      ul.nav.navbar-nav
        li( ui-sref-active="active" )
          a( ui-sref="dashboard" )
            | Dashboard
        li( ui-sref-active="active" )
          a( ui-sref="users.crud.list" ) 
            | Users
        li.dropdown( ng-class="{ active: $state.includes( 'ocarinas' ) }" )
          a.dropdown-toggle(ui-sref="ocarinas.crud.list", data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
            | Ocarinas
            span.caret
          ul.dropdown-menu
            li( ui-sref-active="active" )
              a( ui-sref="ocarinas.crud.list({ type: 'all' })" ) All Ocarinas
            li( ui-sref-active="active" )
              a( ui-sref="ocarinas.crud.list({ type: 'time' })" ) Time Ocarinas
            li( ui-sref-active="active" )
              a( ui-sref="ocarinas.crud.list({ type: 'regular' })" ) Regular Ocarinas

      ul.nav.navbar-nav.navbar-right
        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
            | {{currentUser.profile.name}}
            span.caret
          
          ul.dropdown-menu
            li
              a( ng-click="logout()" ) Logout
